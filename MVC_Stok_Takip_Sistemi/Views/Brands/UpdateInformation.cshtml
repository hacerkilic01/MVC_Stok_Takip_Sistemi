@model MVC_Stok_Takip_Sistemi.Models.Entity.Brand
@{
    ViewBag.Title = "UpdateInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Brand</h2>

<div class="container">
    @using (Html.BeginForm("Update", "Brands"))
    {
        @*@Html.ValidationSummary(false,null,new  { @class="text-danger"})*@
        @Html.HiddenFor(x => x.ID)
        <div class="form-group">
            @Html.LabelFor(x => x.Category.CategoryName)
            @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.l, "Choose", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Brand1)
            @Html.TextBoxFor(x => x.Brand1, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Description)
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        </div>
        <div>
            <button class="btn btn-primary">
                Update Brand
            </button>
        </div>

    }
</div>