@model MVC_Stok_Takip_Sistemi.Models.Entity.Brand
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Brand</h2>
<div class="container">
    @using (Html.BeginForm("Add","Brands",FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(x=>x.Category.ID)
                    @Html.DropDownList("CategoryID",(List<SelectListItem>)ViewBag.l,"--Choose--", new {@class ="form-control"})
                    @Html.ValidationMessageFor(x => x.ID, "" ,new {@class ="text-danger"})
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Brand1)
                    @Html.TextBoxFor(x => x.Brand1, new { @class = "form-control " })
                    @Html.ValidationMessageFor(x => x.Brand1, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Description)
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })

                </div>
                <div>
                    <button class="btn btn-success">Add Brand</button>
                </div>
            }
</div>

