@model MVC_Stok_Takip_Sistemi.Models.Entity.Unit
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Unit</h2>

<div class="container">
    @using (Html.BeginForm("Form", "Units", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Unit1)
            @Html.TextBoxFor(x => x.Unit1, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Description)
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button class="btn btn-success"> Add New Unit</button>
        </div>
    }
</div>