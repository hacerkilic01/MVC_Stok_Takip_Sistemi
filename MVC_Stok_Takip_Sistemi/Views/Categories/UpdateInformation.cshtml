@model MVC_Stok_Takip_Sistemi.Models.Entity.Category
@{
    ViewBag.Title = "UpdateInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdateInformation</h2>

<div class="container">
    <form action="/Categories/Update">
        <div class="form-group">
            <b>ID</b>
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
        </div>
        <div>
            <b>Category</b>
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        </div>
        <div>
            <b>Description</b>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        </div>
        <div>
            <button class="btn btn-primary">
                Update Category
            </button>
        </div>
    </form>
</div>