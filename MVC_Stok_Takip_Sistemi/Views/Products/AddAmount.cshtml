@model MVC_Stok_Takip_Sistemi.Models.Entity.Product
@{
    ViewBag.Title = "AddAmount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Amount</h2>

<div class="container">
    @using (Html.BeginForm("AddAmount", "Products", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.ID)
            @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Amount)
            @Html.TextBoxFor(x => x.Amount , new { @class = "form-control" })
        </div>
        <div>
            <button class="btn btn-secondary">Add Amount</button>
        </div>

    }
</div>

